import { render_gui, setState } from "gui"

function Home() {
    const [count, setCount] = setState(0)

    // Test const and arrow with body
    const increment = () => {
        setCount(count + 1)
        print("Count updated to: ")
        println(count + 1)
    }

    return (
        <Column alignItems="center" justifyContent="center" height="600">
            <Text fontSize="48px" color="#333333" marginBottom="20">
                Count: {count}
            </Text>
            <Button
                onClick={increment}
                padding="20px" backgroundColor="#008CBA" color="white" borderRadius="8px"
                fontSize="32px"
            >
                Increment
            </Button>
        </Column>
    )
}


function App() {
    return (
        <Page backgroundColor="#ffffff" width="100%" height="100%">
            <Home />
        </Page>)
}

render_gui(App)