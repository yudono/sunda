var items = []

function create(name) {
    items.push({ id: items.length + 1, name: name })
}

function remove(id) {
    var result = []
    var i = 0
    while (i < items.length) {
        if (items[i].id != id) {
            result.push(items[i])
        }
        i = i + 1
    }
    items = result
}

create("Apple")
create("Banana")
remove(1)

println(items)
