println("--- Private Field Test ---");

class BankAccount {
    #balance = 0;

    constructor(initial) {
        this.#balance = initial;
    }

    deposit(amount) {
        this.#balance = this.#balance + amount;
    }

    getBalance() {
        return this.#balance;
    }
}

var acc = new BankAccount(100);
println("Initial: " + acc.getBalance()); // 100
acc.deposit(50);
println("After deposit: " + acc.getBalance()); // 150

