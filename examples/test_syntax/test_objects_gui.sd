import { render_gui } from "gui"

function App() {
    return (
        <Page width="100%" height="100%" backgroundColor="#f5f5f5">
            <Column padding="20px">
                <Text fontSize="28px">Object & Array Demo</Text>

                <View height="20px" />

                <Button onClick={() => {
                    var obj = { name: "Apple", price: 100 }
                    println("Object: ", obj)
                    println("Name: ", obj.name)

                    obj.price = 150
                    println("Updated price: ", obj.price)
                }}>Test Objects</Button>

                <View height="10px" />

                <Button onClick={() => {
                    var arr = [1, 2, 3]
                    println("Array: ", arr)

                    arr.push(4)
                    println("After push: ", arr)

                    var doubled = arr.map((x) => {
                        return x * 2
                    })
                    println("Doubled: ", doubled)

                    var filtered = arr.filter((x) => {
                        if (x > 2) { return 1 }
                        return 0
                    })
                    println("Filtered (>2): ", filtered)
                }}>Test Arrays</Button>

                <View height="10px" />

                <Button onClick={() => {
                    var items = [
                        { id: 1, name: "Apple", price: 100 },
                        { id: 2, name: "Banana", price: 50 }
                    ]

                    println("Items: ", items)
                    println("First item: ", items[0].name)

                    var expensive = items.filter((item) => {
                        if (item.price > 60) { return 1 }
                        return 0
                    })
                    println("Expensive items: ", expensive)
                }}>Test Object Arrays</Button>
            </Column>
        </Page>
    )
}

render_gui(App)
