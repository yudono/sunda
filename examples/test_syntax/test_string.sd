// Test split
println("1. Testing split():")
var text = "apple,banana,cherry"
var parts = split(text, ",")
println("  split('apple,banana,cherry', ',') = " + join(parts, " | "))

// Test join
println("")
println("2. Testing join():")
var words = split("hello world test", " ")
var joined = join(words, "-")
println("  join(['hello', 'world', 'test'], '-') = " + joined)

// Test trim
println("")
println("3. Testing trim():")
